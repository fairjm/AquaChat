<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AquaChat.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AquaChat"
    xmlns:pages="using:AquaChat.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Chat" Icon="chatbox_outline.png">
            <ShellContent
                Title="Chat"
                ContentTemplate="{DataTemplate pages:ChatPage}"
                Route="ChatPage" />
        </Tab>

        <Tab Title="Setting" Icon="hammer_outline.png">
            <ShellContent
                Title="Setting"
                ContentTemplate="{DataTemplate pages:SettingPage}"
                Route="SettingPage" />
        </Tab>
    </TabBar>
</Shell>
